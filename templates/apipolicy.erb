<%- @api_policies.each_with_index do |policy, index| -%>
description: '<%= policy['description'] %>'
context:
  <%= policy['context'].keys[0] %>: '<%= policy['context'].values[0] %>'
<%- unless policy['for'].nil? -%>
for:
<%- policy['for'].each do |resource,kind| -%>
  <%= resource %>:
  <%- kind.each do |rules| -%>
  <%- first_key = true -%>
  <%- rules.each do |type, action| -%>
  <%- if ['allow','deny'].include?(type) -%>
    <% if first_key -%>-<%- else %> <% end -%> <%= type %>: <%- if action.is_a? String -%>'<%= action %>'<%-else-%><%= action %><%-end%>
  <%- elsif ['match','equals','contains'].include?(type) -%>
    <%- action.each do |k,v| -%>
    <% if first_key -%>-<%- else %> <% end -%> <%= type %>:
      <%- if ['kind','path','name','group'].include?(k) -%><%='  '%><%- else -%><%-end-%>
      <%= k %>: <%- if v.is_a? String -%>'<%= v %>'<%-else-%><%= v %><%-end%>
    <%- end -%>
  <%- end -%>
  <%- first_key = false -%>
  <%- end -%>
  <%- end -%>
<%- end -%>
<%- end -%>
by:
<%- policy['by'].each do |by| -%>
<%- unless by['group'].nil? && by['group'] != :undef -%>
  group:
  <%- by['group'].each do |group| -%>
    - '<%= group %>'
  <%- end -%>
<%- end -%>
  username:
<%- unless by['username'].nil? && by['username'] != :undef -%>
  <%- by['username'].each do |username| -%>
    - '<%= username %>'
  <%- end -%>
<%- end -%>
<%- end -%>
<%- if index != (@acl_policies.length-1) -%>

---

<%- end -%>
<%- end -%>
